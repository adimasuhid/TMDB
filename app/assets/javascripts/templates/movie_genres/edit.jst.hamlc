.movie-genres.span12.box
  %p
    Genres
  - if @movie_genres
    - $.each @movie_genres, (i, genre) ->
      .span12
        .span4
          = genre.genre.genre
        - if current_user && current_user.user_type == "admin"
          .span2
            %input.js-genre-remove{ type: "button", value: "Remove", data: { id: genre.id } }
  .span12
    %p
      Add new genre
    %input.js-new-genre{ type: "text", placeholder: "Search genre" }
    %input.js-new-genre-id{ type: "hidden" }
    %input.js-new-genre-save{ type: "button", value: "Save" }

    .js-new-item-info.hide
      This genre does not exist. Do you want to add it?
    .js-new-item-add-form.hide
      .span1.js-new-item-add-yes
        Yes
      .span1.js-new-item-add-no
        No


