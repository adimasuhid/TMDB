- if @list_type  == "gallery"
  %a{ href: "/#!/galleries", class: "col-md-12" }
    All galleries
- else if @list_type  == "channel"
  %a{ href: "/#!/channels", class: "col-md-12" }
    All channels
- else
  %a{ href: "/#!/lists", class: "col-md-12" }
    All lists

%h3.col-md-12
  - unless @list_type
    Add new list
  - else
    = "Add new " + @list_type

.list.col-md-12.box
  %p.col-md-12
    Title
    %input.js-title.form-control.flat{ type: "text", placeholder: "Title" }
  %p.description.col-md-12
    Description
    %input.js-description.form-control.flat{ type: "text", placeholder: "Description" }
  %p.col-md-12
    %input.js-list-type{ type: "hidden", value: @list_type }
    %input.js-create.btn.btn-embossed.btn-primary{ type: "button", value: "Save" }

