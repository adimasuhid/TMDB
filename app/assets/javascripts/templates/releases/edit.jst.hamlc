.releases.span12.box
  %p
    Release
  - $.each @releases, (i, release) ->
    .span12.release
      %p
        Release date
      .span12
        = moment(release.release_date).format("YYYY-MM-DD")
      %p
        Country
      .span12
        = release.country.country
      %p
        Confirmed
      .span12
        = if release.confirmed then "Yes" else "No"
      %p
        Primary
      .span12
        = if release.primary then "Yes" else "No"
      - if current_user && current_user.user_type == "admin"
        .span12
          %input.js-release-remove{ type: "button", value: "Remove", data: { id: release.id } }
  .span12
    %p
      Add new release
    %input.js-new-release-release-date{ type: "text", placeholder: "Release date" }
    %input.js-new-release-country{ type: "text", placeholder: "Search country" }
    %input.js-new-release-country-id{ type: "hidden" }
    %select.js-new-release-confirmed
      %option{ value: 0 }= "Confirmed?"
      %option{ value: "true" }= "Yes"
      %option{ value: "false" }= "No"
    -# %input.js-new-release-certification{ type: "text", placeholder: "Certification" }
    %select.js-new-release-primary
      %option{ value: 0 }= "Primary?"
      %option{ value: "true" }= "Yes"
      %option{ value: "false" }= "No"
    %input.js-new-release-save{ type: "button", value: "Save" }
