.alternative-titles.col-md-12.box
  %p
    Alternative Titles
  - $.each @alternative_titles, (i, title) ->
    .col-md-12
      .col-md-3
        = title.alternative_title
      .col-md-3
        = title.language.language
      - if current_user && current_user.user_type == "admin"
        .col-md-2
          %input.js-alternative-title-remove{ type: "button", value: "Remove", data: { id: title.id } }
  .col-md-12
    %p
      Add new alternative title
    %input.js-new-alternative-title{ type: "text", placeholder: "Title" }
    %input.js-new-alternative-title-language{ type: "text", placeholder: "Language" }
    %input.js-new-alternative-title-language-id{ type: "hidden" }
    %input.js-new-alternative-title-save{ type: "button", value: "Save" }

    .js-new-item-info.hide
      This language does not exist. Do you want to add it?
    .js-new-item-add-form.hide
      .col-md-1.js-new-item-add-yes
        Yes
      .col-md-1.js-new-item-add-no
        No


