.production-companies.span12.box
  %p
    Production companies
  - if @production_companies
    - $.each @production_companies, (i, company) ->
      .span12
        .span4
          = company.company.company
        - if current_user && current_user.user_type == "admin"
          .span2
            %input.js-production-company-remove{ type: "button", value: "Remove", data: { id: company.id } }
  .span12
    %p
      Add new production company
    %input.js-new-production-company{ type: "text", placeholder: "Search company" }
    %input.js-new-production-company-id{ type: "hidden" }
    %input.js-new-production-company-save{ type: "button", value: "Save" }

    .js-new-item-info.hide
      This company does not exist. Do you want to add it?
    .js-new-item-add-form.hide
      .span1.js-new-item-add-yes
        Yes
      .span1.js-new-item-add-no
        No

