          .span2
            %input.js-keyword.edit-item{ type: "text", value: keyword.keyword.keyword }
            %input.edit-item{ type: "hidden", value: keyword.keyword_id, "data-id" => "keyword_id" }
          != JST['templates/admin/shared/_buttons'](approved: keyword.approved)

