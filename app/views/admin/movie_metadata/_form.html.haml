= semantic_form_for [:admin, @movie_metadata] do |f|
  = f.inputs "Movie Metadata Settings" do
    = f.input :approved
    = f.input :budget
    = f.input :homepage
    = f.input :imdb_id
    = f.input :runtime
    = f.input :status, :label => "Status", :as => :select, :collection => Status.all.map{|u| [u.status, u.id]}
    = f.input :movie
    = f.input :user, :label => "User", :as => :select, :collection => User.all.map{|u| ["#{u.last_name}, #{u.first_name}", u.id]}
    = f.submit "Update"
