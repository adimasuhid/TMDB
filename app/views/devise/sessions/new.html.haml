= form_for(resource, :as => resource_name, :url => session_path(resource_name), html: { class: "form-signin" }) do |f|
  %h2.form-signin-heading Sign in
  - if flash[:alert]
    .alert
      = flash[:alert]
  %div
    = f.email_field :email, :autofocus => true, class: "input-block-level form-control flat", placeholder: "Email"
  %div
    = f.password_field :password, class: "input-block-level form-control flat", placeholder: "Password"
  - if devise_mapping.rememberable?
    %label.checkbox
      = f.check_box :remember_me
      = "Remember me"
  %div= f.submit "Sign in", class: "btn btn-lg btn-primary flat"
.form-signin
  = render "devise/shared/links"
