= form_for(resource, :as => resource_name, :url => registration_path(resource_name), html: { class: "form-signin" }) do |f|
  %h2.form-signin-heading Sign up
  - if flash[:alert]
    .alert
      = flash[:alert]
  %div
    = f.email_field :email, :autofocus => true, class: "input-block-level form-control flat", placeholder: "Email"
  %div
    = f.password_field :password, class: "input-block-level form-control flat", placeholder: "Password"
  %div
    = f.password_field :password_confirmation, class: "input-block-level form-control flat", placeholder: "Confirm password"
  %div= f.submit "Sign up", class: "btn btn-lg btn-primary flat"
.form-signin
  = render "devise/shared/links"
